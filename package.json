{
  "name": "pijar-cooking-api-v2",
  "version": "2.0.0",
  "author": "isnan.arifc@gmail.com",
  "private": true,
  "scripts": {
    "start": "npx tsc -w",
    "dev": "npx nodemon",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "build": "tsc",
    "prod": "node ./build/index.js",
    "format": "npx prettier . --write",
    "prepare": "npx husky",
    "check-type": "npx tsc --noEmit --pretty",
    "check-format": "npx prettier . --check"
  },
  "dependencies": {
    "argon2": "^0.41.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.4.5",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "joi": "^17.13.3",
    "mysql2": "^3.11.3",
    "uuid": "^11.0.3",
    "winston": "^3.15.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.13.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.0",
    "@types/node": "^22.8.6",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.13.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx pretty-quick --staged ng lint ng test",
      "pre-push": "ng build --aot true"
    }
  }
}
